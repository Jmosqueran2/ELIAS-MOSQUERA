Función tarea_11
//Suma de dos números: Escribe un programa que tome dos números como entrada y muestre su suma.

	Definir a, b, c Como Entero
    Escribir ' ingresar primer numero '
    Leer a
    Escribir ' ingresa el segundo numero '
    Leer b
	c <- a+b
	Escribir 'el resultado es : ', c
FinFunción



Funcion  ejercicio_12
	//Área de un triángulo: Pide al usuario que ingrese la base y la altura de un triángulo,luego calcula y muestra su área.
	Definir  base , altura Como Entero
	Escribir "ingrese las base del triangulo "
	Leer base
	Escribir "ingrese la altura del triangulo "
	Leer altura
	area <- (base*altura)/2
	
	
FinFuncion




Funcion  ejercicio_13
	//Número par o impar: Solicita al usuario que ingrese un número e indica si es par o impar.
	definir  numero, reciduo como entero 
	numero =0; reciduo =0
	Escribir " ingrese un numero "
	leer numero
	reciduo = numero % 2
	si reciduo=0 entonces 
	escribir  numero ,"es impar"
	sino
		escribir numero , " es par"
	FinSi
	
FinFuncion




funcion ejercicio_14
	// Calculadora simple: Crea una calculadora que realice operaciones básicas como suma, resta, multiplicación y división, según la elección del usuario
	
		Definir opc,a,b,resultado como real
		opc = 10
		resultado = 0
		Mientras opc <> 0 Hacer
			Escribir "Escribe un número"
			leer a
			Escribir "Escribe otro número"
			leer b
			
			Escribir ""
			Escribir "1 = Suma"
			Escribir "2 = Resta"
			Escribir "3 = Multiplicación"
			Escribir "4 = División"
			Escribir "Salir con otro número"
			Escribir ""
			Escribir "Elige una opción"
			leer opc		
			Segun opc Hacer
				1:
					resultado = a+b
					Escribir "La suma de ",a," + ",b," = ",resultado
				2:
					resultado = a-b
					Escribir "La resta de ",a," - ",b," = ",resultado
				3:
					resultado = a*b
					Escribir "La multiplicación de ",a," x ",b," = ",resultado
				4:
					resultado = a/b
					Escribir "La división de ",a," / ",b," = ",resultado
				De Otro Modo:
					Escribir "Sistema finalizado"
					opc = 0
			Fin Segun	
		FinMientras
		
FinFuncion

funcion ejercicio_15
	//Tabla de multiplicar: Pide al usuario un número y muestra su tabla de multiplicar del 1 al 10
	Definir n, x Como Entero;
	Escribir "Ingrese un número: ";
	Leer n;
	Para x <- 1 Hasta 10 Hacer
		Escribir n, " x ", x, " = ", n * x;
	FinPara
FinFuncion



Funcion ejercicio_16
	//Copiar palabra: Escribe un programa que lea dos palabras y concatena en otra variable las dos palabras
	Definir palabra1, palabra2, resultado como Caracter;
	
    Escribir "Ingrese la primera palabra: ";
    Leer palabra1;
	
    Escribir "Ingrese la segunda palabra: ";
    Leer palabra2;
	
    resultado <- Concatenar(palabra1, palabra2);
	
    Escribir "El resultado de la concatenación es: ", resultado;
FinFuncion




Funcion ejercicio_17
	//Mayor de tres números: Solicita tres números y determina cuál es el mayor de ellos
	Definir num1, num2, num3, max Como Real;
	
	Escribir "Ingrese el primer número:";
	Leer num1;
	
	Escribir "Ingrese el segundo número:";
	Leer num2;
	
	Escribir "Ingrese el tercer número:";
	Leer num3;
	
	max = num1;
	
	Si num2 > max Entonces
		max = num2;
	FinSi
	
	Si num3 > max Entonces
		max = num3;
	FinSi
	
	Escribir "El número mayor es ", max;
FinFuncion


