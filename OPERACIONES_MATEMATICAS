	//y=2*a+b-a mod 3
	//y=6+7
	//y=13
		Definir a, b, c Como entero
		a = 3
		b = 7
		c = 2 * a + b - a mod 3
		Escribir c
FinFuncion


Funcion deber_2
	//Si a=10 y b=4, calcula el valor de z = a * b + 3 mod a + b. 
	//solucion del segundo ejercicio.
	//z=a*b+3 mod a+b
	//z=4+3=7
	//z=10*4=40
	//z=40+7
	//=47
	Definir a, b, z Como Entero
	a = 10
	b = 4
	z = a * b + 3 mod a + b
	Escribir z
FinFuncion

Funcion deber_3
	//Con a=6 y b=2, determina el valor de w = a - b + 2 * a mod b
